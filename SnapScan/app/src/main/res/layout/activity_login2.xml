<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/raspberryBlush"
    tools:context=".ui.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/TextView_login"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="Please enter your information"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/TextView_loginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView_login"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="71dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView_loginEmail"
            android:hint="Enter Your email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <TextView
            android:id="@+id/TextView_loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView_loginEmail"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="60dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView_loginPassword"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <Button
            android:id="@+id/Button_login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView_loginPassword"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="84dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/AnalogousRed"
            android:text="LOGIN" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_register"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:text="Forgot password?"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Button_login1"
            android:layout_alignStart="@id/Button_login1"
            android:layout_alignEnd="@id/TextView_login"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="70dp"
            android:backgroundTint="@color/AnalogousRed"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Haven't registered?"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="83dp"
            android:shadowColor="#DC4A4A"
            android:text="SnapScan"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>