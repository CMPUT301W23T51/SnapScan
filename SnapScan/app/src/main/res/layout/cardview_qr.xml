<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="15dp"
    cardView:cardCornerRadius="1dp"
    cardView:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/title_VR"
            android:scaleType="centerCrop"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent" />
        <!--            tools:background="@tools:sample/backgrounds/scenic"-->
        <!--        to generate random text or images use tools:sample-->
        <TextView
            android:id="@+id/qr_list_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Name: "
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            cardView:layout_constraintLeft_toRightOf="@id/image"
            cardView:layout_constraintRight_toLeftOf="@+id/qr_list_name_placeholder"
            cardView:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qr_list_score_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Score: "
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            cardView:layout_constraintLeft_toRightOf="@id/image"
            cardView:layout_constraintRight_toLeftOf="@+id/qr_list_name_placeholder"
            cardView:layout_constraintTop_toBottomOf="@+id/qr_list_name_text" />

        <TextView
            android:id="@+id/qr_list_name_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Name"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="italic"
            cardView:layout_constraintLeft_toRightOf="@id/qr_list_name_text"
            cardView:layout_constraintRight_toRightOf="parent"
            cardView:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qr_list_score_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="1000"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="italic"
            cardView:layout_constraintLeft_toRightOf="@id/qr_list_score_text"
            cardView:layout_constraintRight_toRightOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/qr_list_name_placeholder" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>