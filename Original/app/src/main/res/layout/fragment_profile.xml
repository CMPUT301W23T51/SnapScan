<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="87dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="611dp"
        android:layout_toStartOf="@+id/player_name"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="13dp"
        android:text="Player 1"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="635dp"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/qrcode_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="104dp"
        android:layout_toStartOf="@+id/points_count"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/points_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="218dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qrcodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrcode_count"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="74dp"
        android:layout_toStartOf="@+id/points_count"
        android:text="QR Codes"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/points_count"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="200dp"
        android:text="Points"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/ranking_button"
        android:layout_width="66dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="535dp"
        android:background="#E8AAAA"
        android:contentDescription = "Ranking"
        app:srcCompat="@drawable/ranking" />

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="451dp"
        android:background="#E8AAAA"
        android:textColor="@color/black"
        android:text="Edit Profile" />

    <ListView
        android:id="@+id/qrcodes_list"
        android:layout_width="318dp"
        android:layout_height="335dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="25dp"
        android:background="#E8AAAA" />

    <Button
        android:id="@+id/sort_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="385dp"
        android:layout_toEndOf="@+id/delete_button"
        android:textColor="@color/black"
        android:text="Sort" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="382dp"
        android:background="#FF0000"
        android:textColor="@color/black"
        android:text="delete" />


</RelativeLayout>